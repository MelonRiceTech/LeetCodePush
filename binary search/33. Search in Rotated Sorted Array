33. Search in Rotated Sorted Array

Difficulty: Medium

class Solution {
    public int search(int[] nums, int target) {
        int len = nums.length;
        int i = 0;
        int j = len - 1;
        int mid;
        if (len == 0){
            return -1;
        }
        while (i + 1 < j){
            mid = (i + j) >> 1;
            if (nums[mid] == target){
                return mid;
            }
            if (nums[mid] >= nums[i]){
                if (target <= nums[mid] && target >= nums[i]){
                    j = mid;
                }else{
                    i = mid;
                }
            }else if (nums[mid] <= nums[j]){
                if (target >= nums[mid] && target <= nums[j]){
                    i = mid;
                }else{
                    j = mid;
                }
            }
        }
        if (nums[i] == target){
            return i;
        }else if (nums[j] == target){
            return j;
        }else{
            return -1;
        }
    }
}
